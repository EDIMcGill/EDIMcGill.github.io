---
/**
 * Participate Page - EDI McGill
 *
 * Get involved with EDI initiatives at McGill
 * Submit stories, share feedback, volunteer opportunities
 * Features interactive quiz and animated elements
 */
import BaseLayout from '@/layouts/BaseLayout'
import TitlePage from '@/components/TitlePage'
import 'aos/dist/aos.css'

const title = 'Get Involved'
const description = 'Join EDI McGill - submit your story, share feedback, or volunteer with us'
---

<BaseLayout title={title} description={description}>
	<TitlePage title={title} />

	<div class='mb-8 prose dark:prose-invert'>
		<p>
			Your voice matters! There are many ways to get involved with EDI McGill and contribute to
			building a more inclusive campus community.
		</p>
	</div>

	<!-- INTERACTIVE CASE STUDY QUIZ -->
	<section class='case-study-quiz mb-16' data-aos='fade-up'>
		<div
			class='bg-gradient-to-br from-blue-50 via-violet-50 to-purple-50 dark:from-blue-950 dark:via-violet-950 dark:to-purple-950 rounded-3xl p-10 border-2 border-blue-200 dark:border-blue-800 shadow-xl'
		>
			<div class='text-center mb-8'>
				<div
					class='inline-flex items-center gap-2 bg-blue-100 dark:bg-blue-900 px-4 py-2 rounded-full text-blue-700 dark:text-blue-300 font-semibold mb-4'
				>
					<span>üéØ</span>
					<span>Interactive Case Study</span>
				</div>
				<h2 class='text-3xl md:text-4xl font-bold mb-3 dark:text-white'>Test Your EDI Knowledge</h2>
				<p class='text-lg text-gray-700 dark:text-gray-300 max-w-2xl mx-auto'>
					Explore real scenarios and discover how you would respond in different situations
