</BaseLayout>

<style>
	/* Quiz Styling */
	.question {
		display: none;
		animation: fadeIn 0.3s ease-in;
	}

	.question.active {
		display: block;
	}

	.results {
		display: none;
		animation: fadeIn 0.3s ease-in;
	}

	.results:not(.hidden) {
		display: block;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.option-btn {
		cursor: pointer;
	}

	.option-btn:disabled {
		cursor: not-allowed;
		opacity: 0.8;
	}

	.option-btn.correct {
		animation: correctPulse 0.5s ease;
	}

	.option-btn.incorrect {
		animation: shake 0.5s ease;
	}

	@keyframes correctPulse {
		0%,
		100% {
			transform: scale(1);
		}
		50% {
			transform: scale(1.02);
		}
	}

	@keyframes shake {
		0%,
		100% {
			transform: translateX(0);
		}
		25% {
			transform: translateX(-5px);
		}
		75% {
			transform: translateX(5px);
		}
	}

	.quiz-progress {
		transition: width 0.5s ease-out;
	}
</style>

<script>
	// Interactive Quiz Logic
	document.addEventListener('DOMContentLoaded', () => {
		let currentQuestion = 1
		let score = 0
		const totalQuestions = 3

		// Correct answers for each question
		const correctAnswers = {
			1: 'd', // Multiple ways to contribute
			2: 'b', // Rotating monthly celebration
			3: 'c' // Redirect and check in privately
		}

		// Feedback messages
		const feedback = {
			1: {
				correct:
					'‚úÖ Excellent! Providing multiple ways to contribute (speaking, writing, visual) respects different communication styles and cultural norms. This creates an inclusive environment where everyone can participate comfortably.',
				incorrect:
					'üí° Consider that students from different cultural backgrounds may have varying comfort levels with direct verbal participation. Offering multiple modes of contribution (speaking, writing, visual) creates a more inclusive environment.'
			},
			2: {
				correct:
					'‚úÖ Great thinking! A rotating monthly celebration ensures diverse representation and gives everyone a chance to share their culture. This approach is both practical and inclusive.',
				incorrect:
					'üí° The best approach involves students in the decision-making process. A rotating celebration schedule ensures all cultures are valued equally and creates ongoing learning opportunities.'
			},
			3: {
				correct:
					'‚úÖ Perfect response! Gently redirecting protects the student while addressing the issue, and following up privately shows support without putting them on the spot.',
				incorrect:
					"üí° The most effective approach balances immediate intervention with sensitivity to the affected person's comfort. Gently redirecting the conversation and checking in privately respects the student's agency while addressing the harm."
			}
		}

		const questions = document.querySelectorAll('.question')
		const prevBtn = document.querySelector('.prev-btn')
		const nextBtn = document.querySelector('.next-btn')
		const restartBtn = document.querySelector('.restart-btn')
		const resultsDiv = document.querySelector('.results')
		const quizProgress = document.querySelector('.quiz-progress')
		const currentQuestionSpan = document.querySelector('.current-question')
		const progressPercentage = document.querySelector('.progress-percentage')

		// Option button click handlers
		document.querySelectorAll('.option-btn').forEach((btn) => {
			btn.addEventListener('click', function () {
				const question = this.closest('.question')
				const questionNum = parseInt(question.dataset.question)
				const selectedAnswer = this.dataset.answer
				const feedbackDiv = question.querySelector('.feedback')

				// Remove previous selection
				question.querySelectorAll('.option-btn').forEach((b) => {
					b.classList.remove('selected', 'correct', 'incorrect')
				})

				// Mark selected
				this.classList.add('selected')

				// Check if correct
				const isCorrect = selectedAnswer === correctAnswers[questionNum]
				if (isCorrect) {
					this.classList.add('correct')
					this.style.borderColor = '#10b981'
					this.style.backgroundColor = '#d1fae5'
					score++
					feedbackDiv.innerHTML = `<div class="text-green-800 dark:text-green-200">${feedback[questionNum].correct}</div>`
				} else {
					this.classList.add('incorrect')
					this.style.borderColor = '#ef4444'
					this.style.backgroundColor = '#fee2e2'
					feedbackDiv.innerHTML = `<div class="text-red-800 dark:text-red-200">${feedback[questionNum].incorrect}</div>`
				}

				feedbackDiv.classList.remove('hidden')

				// Disable all buttons after selection
				question.querySelectorAll('.option-btn').forEach((b) => (b.disabled = true))

				// Show next/prev buttons
				if (currentQuestion < totalQuestions) {
					nextBtn.classList.remove('hidden')
				}
				if (currentQuestion > 1) {
					prevBtn.classList.remove('hidden')
				}
			})
		})

		// Next button
		nextBtn.addEventListener('click', () => {
			if (currentQuestion < totalQuestions) {
				questions[currentQuestion - 1].classList.remove('active')
				questions[currentQuestion - 1].classList.add('hidden')
				currentQuestion++
				questions[currentQuestion - 1].classList.remove('hidden')
				questions[currentQuestion - 1].classList.add('active')

				nextBtn.classList.add('hidden')
				updateProgress()

				// Show results if last question
				if (currentQuestion === totalQuestions) {
					// Check if last question is answered
					const lastQuestion = questions[currentQuestion - 1]
					if (lastQuestion.querySelector('.option-btn.selected')) {
						setTimeout(showResults, 1000)
					}
				}
			}
		})

		// Previous button
		prevBtn.addEventListener('click', () => {
			if (currentQuestion > 1) {
				questions[currentQuestion - 1].classList.remove('active')
				questions[currentQuestion - 1].classList.add('hidden')
				currentQuestion--
				questions[currentQuestion - 1].classList.remove('hidden')
				questions[currentQuestion - 1].classList.add('active')

				nextBtn.classList.remove('hidden')
				updateProgress()
			}
		})

		// Restart button
		restartBtn.addEventListener('click', () => {
			currentQuestion = 1
			score = 0

			// Reset all questions
			questions.forEach((q, index) => {
				q.classList.remove('active', 'hidden')
				if (index === 0) q.classList.add('active')
				else q.classList.add('hidden')

				q.querySelectorAll('.option-btn').forEach((btn) => {
					btn.disabled = false
					btn.classList.remove('selected', 'correct', 'incorrect')
					btn.style.borderColor = ''
					btn.style.backgroundColor = ''
				})

				q.querySelector('.feedback').classList.add('hidden')
			})

			resultsDiv.classList.add('hidden')
			prevBtn.classList.add('hidden')
			nextBtn.classList.add('hidden')
			updateProgress()
		})

		function updateProgress() {
			const progress = (currentQuestion / totalQuestions) * 100
			quizProgress.style.width = progress + '%'
			currentQuestionSpan.textContent = currentQuestion
			progressPercentage.textContent = Math.round(progress) + '%'
		}

		function showResults() {
			questions.forEach((q) => q.classList.add('hidden'))
			prevBtn.classList.add('hidden')
			nextBtn.classList.add('hidden')

			resultsDiv.classList.remove('hidden')
			document.querySelector('.score').textContent = score

			const messageP = document.querySelector('.results-message p')
			if (score === 3) {
				messageP.textContent =
					'üåü Outstanding! You have a strong understanding of EDI principles. Consider joining our EDI committees to share your insights!'
			} else if (score === 2) {
				messageP.textContent =
					"üëè Great job! You're on the right track. Keep learning and engaging with EDI resources to deepen your understanding."
			} else {
				messageP.textContent =
					'üìö Thank you for participating! Explore our workshops and resources to learn more about creating inclusive environments.'
			}
		}

		// Initialize AOS
		import('aos').then((AOS) => {
			AOS.init({
				duration: 800,
				easing: 'ease-in-out',
				once: true,
				offset: 100
			})
		})
	})
</script>
