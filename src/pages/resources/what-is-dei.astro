---
/**
 * What is EDI? - Introduction page
 */
import BaseLayout from '@/layouts/BaseLayout'

const title = 'What is EDI?'
const description = 'Understanding Equity, Diversity, and Inclusion'
---

<BaseLayout title={title} description={description}>
	<!-- Page header -->
	<div class='mb-8'>
		<a
			href='/resources/module-1'
			class='inline-flex items-center text-sm mb-4 hover:underline'
			style='color: #5B2D8B;'
		>
			← Back to Module 1
		</a>
		<h1 class='text-2xl md:text-3xl font-semibold mb-4 leading-snug' style='color: #111827;'>
			{title}
		</h1>
	</div>

	<!-- Content Section -->
	<div class='prose prose-lg max-w-none dark:prose-invert'>
		<div class='bg-purple-50 dark:bg-gray-800 rounded-2xl p-8 mb-8'>
			<h2 class='text-xl font-bold mb-4' style='color: #5B2D8B;'>Introduction to EDI</h2>
			<p class='text-base leading-loose' style='color: #374151;'>
				EDI stands for Equity, Diversity, and Inclusion. These three interconnected concepts form
				the foundation for creating fair, representative, and welcoming environments in all aspects
				of society, including engineering and technology.
			</p>
		</div>

		<!-- Placeholder for slides/content -->
		<div
			class='bg-white dark:bg-gray-900 rounded-xl border-2 border-gray-200 dark:border-gray-700 p-8 mb-8'
		>
			<p class='text-center text-gray-500 dark:text-gray-400 italic'>
				[Slides and detailed content will be added here]
			</p>
		</div>

		<!-- Quick Links to Concepts -->
		<div class='grid grid-cols-1 md:grid-cols-3 gap-4 mt-8'>
			<a
				href='/resources/diversity'
				class='block p-6 bg-purple-50 dark:bg-gray-800 rounded-xl border border-purple-200 dark:border-purple-800 hover:shadow-lg transition-all'
			>
				<h3 class='font-semibold mb-2' style='color: #5B2D8B;'>Explore Diversity →</h3>
				<p class='text-sm' style='color: #374151;'>Learn about diverse perspectives</p>
			</a>
			<a
				href='/resources/equity'
				class='block p-6 bg-orange-50 dark:bg-gray-800 rounded-xl border border-orange-200 dark:border-orange-800 hover:shadow-lg transition-all'
			>
				<h3 class='font-semibold mb-2' style='color: #E05A1A;'>Explore Equity →</h3>
				<p class='text-sm' style='color: #374151;'>Understand fair treatment</p>
			</a>
			<a
				href='/resources/inclusion'
				class='block p-6 bg-yellow-50 dark:bg-gray-800 rounded-xl border border-yellow-200 dark:border-yellow-800 hover:shadow-lg transition-all'
			>
				<h3 class='font-semibold mb-2' style='color: #F2C94C;'>Explore Inclusion →</h3>
				<p class='text-sm' style='color: #374151;'>Create welcoming spaces</p>
			</a>
		</div>
	</div>
</BaseLayout>
