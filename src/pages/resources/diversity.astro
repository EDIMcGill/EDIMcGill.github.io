---
/**
 * Diversity - Core concept page
 */
import BaseLayout from '@/layouts/BaseLayout'

const title = 'Diversity'
const description = 'Understanding diversity in engineering contexts'
---

<BaseLayout title={title} description={description}>
	<!-- Page header -->
	<div class='mb-8'>
		<a
			href='/resources/module-1'
			class='inline-flex items-center text-sm mb-4 hover:underline'
			style='color: #5B2D8B;'
		>
			← Back to Module 1
		</a>
		<h1 class='text-2xl md:text-3xl font-semibold mb-4 leading-snug' style='color: #111827;'>
			{title}
		</h1>

		<div class='flex items-start gap-3'>
			<div
				class='w-1 h-auto min-h-[60px] rounded-full flex-shrink-0'
				style='background: linear-gradient(to bottom, #5B2D8B, #E05A1A);'
			>
			</div>
			<div class='flex-1'>
				<p class='text-base leading-loose' style='color: #374151;'>
					Diversity encompasses the full range of human differences including but not limited to
					race, ethnicity, gender, gender identity, sexual orientation, age, social class, physical
					ability, religious beliefs, political beliefs, and other characteristics.
				</p>
			</div>
		</div>
	</div>

	<!-- Content Section -->
	<div class='prose prose-lg max-w-none dark:prose-invert'>
		<div class='bg-purple-50 dark:bg-gray-800 rounded-2xl p-8 mb-8'>
			<h2 class='text-xl font-bold mb-4' style='color: #5B2D8B;'>
				Why Diversity Matters in Engineering
			</h2>
			<ul class='space-y-3 text-base' style='color: #374151;'>
				<li class='flex items-start'>
					<span class='mr-3 mt-1' style='color: #5B2D8B;'>•</span>
					<span>Diverse teams produce more innovative solutions</span>
				</li>
				<li class='flex items-start'>
					<span class='mr-3 mt-1' style='color: #5B2D8B;'>•</span>
					<span>Multiple perspectives lead to better problem-solving</span>
				</li>
				<li class='flex items-start'>
					<span class='mr-3 mt-1' style='color: #5B2D8B;'>•</span>
					<span>Representation ensures products serve all users</span>
				</li>
			</ul>
		</div>

		<!-- Placeholder for content -->
		<div
			class='bg-white dark:bg-gray-900 rounded-xl border-2 border-gray-200 dark:border-gray-700 p-8 mb-8'
		>
			<p class='text-center text-gray-500 dark:text-gray-400 italic'>
				[Interactive exercises and detailed content will be added here]
			</p>
		</div>
	</div>

	<!-- Navigation -->
	<section
		class='mt-12 flex justify-between items-center pt-6 border-t border-gray-200 dark:border-gray-700'
	>
		<a
			href='/resources/module-1'
			class='text-sm font-medium hover:underline'
			style='color: #5B2D8B;'
		>
			← Back to Module 1
		</a>
		<a href='/resources/equity' class='text-sm font-medium hover:underline' style='color: #E05A1A;'>
			Next: Equity →
		</a>
	</section>
</BaseLayout>
