---
import { siteConfig } from '@/site-config'
import { SOCIALNETWORKS } from '@/data/links'

const today = new Date()
---

<footer
	class='w-full border-t-2 border-gray-200 dark:border-gray-700 py-8 mt-16 -mx-5 sm:-mx-8 md:-mx-0 px-5 sm:px-8 lg:px-0'
>
	<div class='max-w-6xl mx-auto'>
		<div class='flex flex-col md:flex-row justify-between items-center gap-6'>
			<!-- Copyright -->
			<div class='text-center md:text-left text-gray-600 dark:text-gray-400 text-sm'>
				&copy; {today.getFullYear()}
				{siteConfig.author}. All rights reserved.
			</div>

			<!-- Social Links -->
			<div class='flex items-center gap-4'>
				<span class='text-sm text-gray-600 dark:text-gray-400 mr-2'>Connect with us:</span>
				{
					SOCIALNETWORKS.map((network) => (
						<a
							href={network.url}
							target='_blank'
							rel='noopener noreferrer'
							aria-label={network.name}
							class='text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors p-2 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg'
							title={network.name}
						>
							<span class='w-5 h-5 block'>{<network.icon />}</span>
						</a>
					))
				}
			</div>
		</div>
	</div>
</footer>
