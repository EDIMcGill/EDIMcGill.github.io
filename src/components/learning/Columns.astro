---
/**
 * Columns - Two-column layout (text/text or text/image)
 * Purpose: Side-by-side content like Rise lessons
 */
interface Props {
	ratio?: '50-50' | '60-40' | '40-60' | '70-30' | '30-70'
	gap?: 'sm' | 'md' | 'lg'
}

const { ratio = '50-50', gap = 'md' } = Astro.props

const ratioClasses = {
	'50-50': 'md:grid-cols-2',
	'60-40': 'md:grid-cols-[60fr_40fr]',
	'40-60': 'md:grid-cols-[40fr_60fr]',
	'70-30': 'md:grid-cols-[70fr_30fr]',
	'30-70': 'md:grid-cols-[30fr_70fr]'
}

const gapClasses = {
	sm: 'gap-4',
	md: 'gap-6',
	lg: 'gap-8'
}

const gridClass = ratioClasses[ratio]
const gapClass = gapClasses[gap]
---

<div class={`columns-layout grid grid-cols-1 ${gridClass} ${gapClass} mb-6`}>
	<slot />
</div>

<style>
	.columns-layout {
		align-items: start;
	}

	@media (max-width: 768px) {
		.columns-layout {
			gap: 1rem;
		}
	}
</style>
